<% layout('layouts/boilerplate') %>
    <h1>List of campgrounds</h1>
    <% for (let i of campgrounds) { %>
        <div class='card mb-3'>
            <div class="row">
                <div class="col-md-4">
                    <% if(i.images.length) { %>
                        <img class="img-fluid" src="<%=i.images[0].url %>" alt="">
                        <% } else {%>
                            <img src="https://res.cloudinary.com/dhizlmb4s/image/upload/v1610028832/yelpcamp/r9jfab0pfv6wwdofeusx.jpg"
                                alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= i.title %>
                        </h5>
                        <p class="card-text">
                            <%= i.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= i.location%>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= i._id%>" class="btn btn-primary">View <%= i.title%></a>
                    </div>
                </div>
            </div>

        </div>
        <% } %>